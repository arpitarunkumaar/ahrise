{
  "manifest_version": 3,
  "name": "hw eyescream",
  "version": "1.0",
  "description": "A plain text description",
  "icons": {
    "60": "assets/icon60.png"
  },
  "action": {
    "default_popup": "options.html",
    "default_icon": "assets/icon60.png"
  },
  "host_permissions": [
    "<all_urls>"
   ],
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "alarms",
    "notifications",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  }

} 